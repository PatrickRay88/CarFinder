# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1
EMBEDDING_MODEL=nomic-embed-text

# Database Configuration
DATABASE_PATH=data/carfinder.db

# Search Configuration
MAX_RESULTS=20
SIMILARITY_THRESHOLD=0.7
RERANK_TOP_K=10

# UI Configuration
STREAMLIT_THEME=light
DEBUG_MODE=false

# Optional: External APIs
NHTSA_API_KEY=your_nhtsa_api_key_here
RECALLS_API_ENDPOINT=https://api.nhtsa.gov/recalls/recallsByVehicle

# Optional: Cloud LLM Fallback (if Ollama unavailable)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/carfinder.log
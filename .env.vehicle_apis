# Vehicle Data API Configuration

# AutoTrader API (requires subscription)
AUTOTRADER_API_KEY=your_autotrader_api_key_here
AUTOTRADER_BASE_URL=https://api.autotrader.com/v1

# CarGurus API (requires partnership)
CARGURUS_API_KEY=your_cargurus_api_key_here
CARGURUS_BASE_URL=https://api.cargurus.com/v1

# Cars.com (web scraping - use responsibly)
CARS_COM_RATE_LIMIT=1  # seconds between requests
CARS_COM_USER_AGENT=CarFinder/1.0 (Educational Purpose)

# Data source settings
ENABLE_LIVE_DATA=true
CACHE_DURATION_HOURS=2
MAX_RESULTS_PER_SOURCE=10
ENABLE_DATA_CACHING=true

# Search settings
DEFAULT_SEARCH_RADIUS=50  # miles
MAX_CONCURRENT_SOURCES=3
REQUEST_TIMEOUT=30  # seconds